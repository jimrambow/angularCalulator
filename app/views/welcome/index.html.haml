

%div{ ng: {controller: "IndexCtrl"}}
  %div
    {{additiontest}}
  .calcbody
    .thinborder
      %p.output{:name => "output"}
        {{output}}
        %br 
        {{operationToken}}
    .calcbuttons
      %button.numberbutton{:name => "btn1", "ng-click" => "updateOutput(1)", :value => "1"} 1
      %button.numberbutton{:name => "btn2", "ng-click" => "updateOutput(2)", :value => "2"} 2
      %button.numberbutton{:name => "btn3", "ng-click" => "updateOutput(3)", :value => "3"} 3
      %button.operationbutton{:name => "btnMinus", "ng-click" => "subtract()"} -
      %br
      %button.numberbutton{:name => "btn4", "ng-click" => "updateOutput(4)", :value => "4"} 4
      %button.numberbutton{:name => "btn5", "ng-click" => "updateOutput(5)", :value => "5"} 5
      %button.numberbutton{:name => "btn6", "ng-click" => "updateOutput(6)", :value => "6"} 6
      %button.operationbutton{:name => "btnPlus", "ng-click" => "add()"} +
      %br
      %button.numberbutton{:name => "btn7", "ng-click" => "updateOutput(7)", :value => "7"} 7
      %button.numberbutton{:name => "btn8", "ng-click" => "updateOutput(8)", :value => "8"} 8
      %button.numberbutton{:name => "btn9", "ng-click" => "updateOutput(9)", :value => "9"} 9
      %button.operationbutton{:name => "btnEquals", "ng-click" => "calculate()"} =
      %br
      %button.numberbutton{:name => "btn0", "ng-click" => "updateOutput(0)", :value => "0"} 0
      %button.clearbutton{:name => "btnClear", "ng-click" => "clear()"} CLEAR    
  %p
    pendingOperation: {{pendingOperation}}
    %br
    lastOperation: {{lastOperation}}
    %br
    runningTotal: {{runningTotal}}
    %br
    pendingValue: {{pendingValue}}
    %br 
    newNumber: {{newNumber}}